<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.williamwu.springdb.mapper.ScheduleMapper">
    <resultMap id="ResultMap" type="io.williamwu.springdb.model.Schedule" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="student_id" property="studentId" jdbcType="INTEGER" />
        <result column="subject_id" property="subjectId" jdbcType="INTEGER" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <select id="getAll" resultMap="ResultMap">
        SELECT * FROM schedule;
    </select>
    <select id="get" parameterType="java.lang.Integer" resultMap="ResultMap">
        SELECT * FROM schedule WHERE id = #{id};
    </select>
    <insert id="insert" parameterType="io.williamwu.springdb.model.Schedule">
        INSERT INTO schedule (create_time, student_id, subject_id)
        VALUES (now(), #{studentId}, #{subjectId});
    </insert>
    <update id="update" parameterType="io.williamwu.springdb.model.Schedule" >
        UPDATE schedule SET
        <if test="studentId != null">student_id = #{studentId},</if>
        <if test="subjectId != null">subject_id = #{subjectId},</if>
        modify_time = now()
        WHERE
        id = #{id}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE from schedule WHERE id = #{id};
    </delete>
</mapper>