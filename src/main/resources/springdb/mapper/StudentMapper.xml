<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.williamwu.springdb.mapper.StudentMapper">
    <resultMap id="ResultMap" type="io.williamwu.springdb.model.Student" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="student_name" property="studentName" jdbcType="VARCHAR" />
        <result column="student_age" property="age" jdbcType="INTEGER" />
        <result column="student_gender" property="gender" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    </resultMap>
    <select id="getAll" resultMap="ResultMap">
        SELECT * FROM student;
    </select>
    <select id="get" parameterType="java.lang.Integer" resultMap="ResultMap">
        SELECT * FROM student WHERE id = #{id};
    </select>
    <insert id="insert" parameterType="io.williamwu.springdb.model.Student">
        INSERT INTO student (create_time, student_name, student_age, student_gender)
        VALUES (now(), #{studentName}, #{age}, #{gender});
    </insert>
    <update id="update" parameterType="io.williamwu.springdb.model.Student" >
        UPDATE student SET
        <if test="studentName != null">student_name = #{studentName},</if>
        <if test="age != null">student_age = #{age},</if>
        <if test="gender != null">student_gender = #{gender},</if>
        modify_time = now()
        WHERE
        id = #{id}
    </update>
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE from student WHERE id = #{id};
    </delete>
</mapper>